{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AllowedHosts": "*",
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "IpWhitelist": [ "127.0.0.1", "::1/10", "192.168.0.0/24" ],
    "EndpointWhitelist": [ ],
    "ClientWhitelist": [ ],
    "GeneralRules": [
      {
        "Endpoint": "*:/api/board",
        "Period": "5s",
        "Limit": 5
      },
      {
        "Endpoint": "*:/api/board/data",
        "Period": "5s",
        "Limit": 10
      },
      {
        "Endpoint": "*:/api/server",
        "Period": "2s",
        "Limit": 50
      },
      {
        "Endpoint": "*:/api/thread",
        "Period": "5s",
        "Limit": 5
      },
      {
        "Endpoint": "*:/api/thread/single",
        "Period": "2s",
        "Limit": 10
      },
      {
        "Endpoint": "*:/api/thread/posts",
        "Period": "5s",
        "Limit": 5
      },
      {
        "Endpoint": "*:/api/thread/create",
        "Period": "5m",
        "Limit": 4
      },
      {
        "Endpoint": "*:/api/thread/delete",
        "Period": "5s",
        "Limit": 3
      },
      {
        "Endpoint": "*:/api/webhooks/subscribe",
        "Period": "30m",
        "Limit": 1
      },
      {
        "Endpoint": "*:/api/webhooks/unsubscribe",
        "Period": "10m",
        "Limit": 3
      }
    ]
  }
}
